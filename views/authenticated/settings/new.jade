extends ../layout
block head

block foot
  script(src='/js/pages/klanten/new.js')
block content
  .row.wrapper.border-bottom.white-bg.page-heading
    .col-lg-10
      h2 Data Tables
      ol.breadcrumb
        li
          a(href='/authenticated/index') Home
        li
          a(href='/authenticated/settings') Settings
        li.active
          strong Nieuwe Setting
    .col-lg-2
  .row.wrapper.wrapper-content.animated.fadeInRight
    .col-lg-5
      .ibox.float-e-margins
        .ibox-title
          h5 Nieuwe Setting
          .ibox-tools
            a.collapse-link
              i.fa.fa-chevron-up
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              i.fa.fa-wrench
            ul.dropdown-menu.dropdown-user
              li
                a(href='#') Config option 1
              li
                a(href='#') Config option 2
            a.close-link
              i.fa.fa-times
        .ibox-content
          form.form-horizontal(method='POST', action='/authenticated/settings/new')
            .form-group
              label.col-lg-2.control-label Type
              .col-lg-10
                select(name='type')
                  option(value='1') 1
                  option(value='2') 2
            .form-group
              label.col-lg-2.control-label Value
              .col-lg-10
                input.form-control(type='text', placeholder='Value', name='value')
            .form-group
              .col-lg-offset-2.col-lg-10
                button.btn.btn-sm.btn-white(type='submit') Sla Op
                | &nbsp;
                a.btn.btn-sm.btn-danger(href='/authenticated/klanten') Ga terug
